<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kasperovich.ui.ScholarshipProgramsController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Available Scholarship Programs" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBackAction" />
            </HBox>
            <Separator/>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filter: " />
                <ComboBox fx:id="filterComboBox" promptText="All Programs">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="All Programs" />
                            <String fx:value="Active Programs" />
                            <String fx:value="Accepting Applications" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefreshAction" />
            </HBox>
            
            <TableView fx:id="programsTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Program Name" prefWidth="200" />
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250" />
                    <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100" />
                    <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="100" />
                    <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="100" />
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                </columns>
                <placeholder>
                    <Label text="No scholarship programs available" />
                </placeholder>
            </TableView>
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label fx:id="statusLabel" text="" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="applyButton" text="Apply for Selected Program" onAction="#handleApplyAction" disable="true" />
            </HBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Label text=" 2025 Grant Flow System" style="-fx-font-size: 12px;"/>
        </HBox>
    </bottom>
</BorderPane>
