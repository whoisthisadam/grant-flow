<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kasperovich.ui.FundAllocationController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Label fx:id="titleLabel" text="Fund Allocation" styleClass="title-label">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userNameLabel" text="Username" />
            <Label fx:id="roleLabel" text="Role: Admin" />
            <Button fx:id="logoutButton" onAction="#handleLogoutAction" text="Logout" />
            <Button fx:id="languageButton" onAction="#handleLanguageSwitch" text="EN/RU" />
        </HBox>
    </top>
    
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="10" style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets bottom="20" left="10" right="10" top="20" />
            </padding>
            <Button fx:id="dashboardButton" maxWidth="Infinity" onAction="#handleDashboardAction" text="Dashboard" />
            <Button fx:id="programsButton" maxWidth="Infinity" onAction="#handleProgramsAction" text="Programs" />
            <Button fx:id="applicationsButton" maxWidth="Infinity" onAction="#handleApplicationsAction" text="Applications" />
            <Button fx:id="budgetsButton" maxWidth="Infinity" onAction="#handleBudgetsAction" text="Budgets" />
            <Button fx:id="fundAllocationButton" maxWidth="Infinity" disable="true" text="Fund Allocation" />
            <Button fx:id="profileButton" maxWidth="Infinity" onAction="#handleProfileAction" text="Profile" />
        </VBox>
    </left>
    
    <center>
        <VBox spacing="20" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            
            <!-- Fund Allocation Form -->
            <TitledPane text="Allocate Funds" expanded="true">
                <VBox spacing="10">
                    <GridPane hgap="10" vgap="10">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        
                        <Label text="Budget:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="budgetComboBox" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Budget Details:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextArea fx:id="budgetDetailsTextArea" editable="false" prefHeight="80" prefWidth="300" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Program:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <ComboBox fx:id="programComboBox" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="amountTextField" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextArea fx:id="notesTextArea" prefHeight="80" prefWidth="300" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Button fx:id="allocateButton" onAction="#handleAllocateFunds" text="Allocate Funds" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="100" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                        </rowConstraints>
                    </GridPane>
                </VBox>
            </TitledPane>
            
            <!-- Allocations Table -->
            <TitledPane text="Recent Allocations" expanded="true">
                <VBox spacing="10">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Filter by:" />
                        <ComboBox fx:id="filterComboBox" promptText="Select Filter" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="refreshButton" onAction="#handleRefresh" text="Refresh" />
                    </HBox>
                    
                    <TableView fx:id="allocationsTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                            <TableColumn fx:id="budgetColumn" text="Budget" prefWidth="150" />
                            <TableColumn fx:id="programColumn" text="Program" prefWidth="150" />
                            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100" />
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150" />
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                        </columns>
                    </TableView>
                </VBox>
            </TitledPane>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="5" left="20" right="20" top="5" />
            </padding>
            <Label fx:id="versionLabel" text="Version: 1.0.0" />
        </HBox>
    </bottom>
</BorderPane>
